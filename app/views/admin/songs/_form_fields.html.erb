<div class="form-group">
  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :year %>
  <%= f.text_field :year, class: 'form-control' %>
</div>
<div class="form-group">
  <%= f.label :artist %>
  <%= f.collection_select :artist_id,
                          Artist.order(:name),
                          :id,
                          :name,
                          { prompt: 'Select one...' },
                          class: 'form-control' %>
</div>
