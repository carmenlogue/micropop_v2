<div class="row">
  <div class="col-md-12">
    <h1 class="h2 float-left mb-4">Songs</h1>
    <%= link_to('Add',
                new_admin_song_path,
                class: 'btn btn-primary float-right mb-4') %>
  </div>
</div>

<%= form_tag admin_songs_path, class: "row", method: :get do %>
  <div class="col-md-9 text-right">
    <%= text_field_tag :query,
                       params[:query],
                       id: 'song_search',
                       autocomplete: :off,
                       placeholder: "Search for a song title...",
                       class: "form-control float-left mt-3 mb-3 bg-white" %>
  </div>
  <div class="col-md-3 text-right">
    <%= submit_tag "Search", class: "btn btn-primary mt-3 float-right" %>
  </div>
<% end %>

<%= link_to 'Back to index', admin_songs_path, class: 'btn btn-primary mb-3' %>

<div class="card table-responsive">
  <%= paginate @songs %>
  <table class="table">
    <tr>
      <%= content_tag(:th, 'Title', scope: 'col') %>
      <%= content_tag(:th, 'Actions',  scope: 'col') %>
    </tr>
    <tr>
      <% if @songs.any? %>
        <%= render @songs %>
      <% else %>
        <div class="col-md-12">
          <span class="lead">No songs added, yet.</span>
        </div>
      <% end %>
    </tr>
  </table>
</div>
