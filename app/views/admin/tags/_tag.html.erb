<tr>
  <%= content_tag(:td, tag.name, scope: 'row') %>
  <td>
    <%= link_to 'View', admin_tag_path(tag) %> |
    <%= link_to 'Edit', edit_admin_tag_path(tag) %> |
    <%= link_to('Delete', admin_tag_path(tag),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this tag?' }) %>
  </td>
</tr>
