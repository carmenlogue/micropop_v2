<div class="row">
  <div class="col-md-12">
    <h1 class="h2 float-left mt-3 mb-3"><%= @tag.name %></h1>
    <%= link_to 'Delete',
                admin_tag_path(@tag),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this tag?' },
                class: 'btn btn-danger float-right mt-3 mb-3' %>
    <%= link_to 'Edit',
                edit_admin_tag_path(@tag),
                class: 'btn btn-primary float-right mt-3 mr-2 mb-3' %>
  </div>
</div>

<div class="card mb-3">
  <div class="card-block">
    <div class="card-body">
      <dl>
        <dt>Tag</dt>
        <dd><%= @tag.name %></dd>
      </dl>
    </div>
  </div>
</div>
