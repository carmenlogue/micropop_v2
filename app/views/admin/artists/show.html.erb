<div class="row">
  <div class="col-md-12">
    <h1 class="h2 float-left mt-3 mb-3"><%= @artist.name %></h1>
    <%= link_to 'Delete',
                admin_artist_path(@artist),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this artist?' },
                class: 'btn btn-danger float-right mt-3 mb-3' %>
    <%= link_to 'Edit',
                edit_admin_artist_path(@artist),
                class: 'btn btn-primary float-right mt-3 mr-2 mb-3' %>
  </div>
</div>

<div class="card mb-3">
  <div class="card-block">
    <div class="card-body">
      <dl>
        <dt>Artist name</dt>
        <dd><%= @artist.name %></dd>

        <dt>Artist signature</dt>
        <dd><%= @artist.signature %></dd>
      </dl>
    </div>
  </div>
</div>
