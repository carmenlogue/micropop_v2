<div class="row">
  <div class="col-md-12">
    <h1 class="h2 float-left mt-3 mb-3"><%= @poem.fragment %></h1>
    <%= link_to 'Delete',
                admin_poem_path(@poem),
                method: :delete,
                data: { confirm: 'Are you sure you want to delete this poem?' },
                class: 'btn btn-danger float-right mt-3 mb-3' %>
    <%= link_to 'Edit',
                edit_admin_poem_path(@poem),
                class: 'btn btn-primary float-right mt-3 mr-2 mb-3' %>
  </div>
</div>

<div class="card mb-3">
  <div class="card-block">
    <div class="card-body">
      <dl>
        <dt>Poem</dt>
        <dd><%= @poem.fragment %></dd>

        <dt>Artist</dt>
        <dd><%= @poem.artist.name %></dd>

        <dt>Artist signature</dt>
        <dd><%= @poem.artist.signature %></dd>

        <dt>Song</dt>
        <dd><%= @poem.song.title %></dd>

        <dt>Image</dt>
        <dd><%= image_tag @poem.image.admin_thumb.url if @poem.image? %></dd>

        <dt>Categories</dt>
        <dd><%= @poem.categories.map(&:name) %></dd>

        <dt>Tags</dt>
        <dd><%= @poem.tags.map(&:name) %></dd>
      </dl>
    </div>
  </div>
</div>
