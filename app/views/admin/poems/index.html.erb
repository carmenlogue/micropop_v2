<div class="row">
  <div class="col-md-12">
    <h1 class="h2 float-left mb-4">Poems</h1>
    <%= link_to('Add',
                new_admin_poem_path,
                class: 'btn btn-primary float-right mb-4') %>
  </div>
</div>

<%= form_tag admin_poems_path, class: "row", method: :get do %>
    <div class="col-md-9 text-right">
      <%= text_field_tag :query,
                         params[:query],
                         id: 'poem_search',
                         autocomplete: :off,
                         placeholder: "Search for a poem fragment...",
                         class: "form-control float-left mt-3 mb-3 bg-white" %>
    </div>
    <div class="col-md-3 text-right">
      <%= submit_tag "Search", class: "btn btn-primary mt-3 float-right" %>
    </div>
<% end %>

<%= link_to 'Back to index', admin_poems_path, class: 'btn btn-primary mb-3' %>

<div class="card table-responsive">
  <%= paginate @poems %>
  <table class="table">
    <tr>
      <%= content_tag(:th, 'Fragment', scope: 'col') %>
      <%= content_tag(:th, 'Actions',  scope: 'col') %>
    </tr>
    <tr>
      <% if @poems.any? %>
        <%= render @poems %>
      <% else %>
        <div class="col-md-12">
          <span class="lead">No poems added, yet.</span>
        </div>
      <% end %>
    </tr>
  </table>
</div>
