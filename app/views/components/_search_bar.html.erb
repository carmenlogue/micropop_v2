<%= form_tag poems_path, method: :get do %>
  <div class="page-header">
    <div class="input-group">
      <ul class="search-for-list">
        <il id="first-loupe"><%= image_submit_tag("white_loupe.png") %></il>
        <il><%= text_field_tag :query, params[:query], placeholder: "Search for...", class: "search-form-control typeahead" %></il>
        <il id="last-loupe"><%= image_submit_tag("white_loupe.png") %></il>
      </ul>
    </div>
  </div>
<% end %>
